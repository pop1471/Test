<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.acta.acta.CountryInformationBurundiLanguage">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Burundi"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="left"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Common Phrases"
        android:id="@+id/tip"
        android:textColor="#000000"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="#b7ffa9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="&quot;안녕하세요&quot; - &quot;Hello&quot; (Ahn-nyung-ha-se-yo)"
        android:id="@+id/phrase1"
        android:layout_below="@+id/tip"
        android:layout_alignLeft="@+id/tip"
        android:layout_alignStart="@+id/tip"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="&quot;감사합니다&quot; - &quot;Thank you&quot; (Kam-sa-ham-ni-da)"
        android:id="@+id/phrase2"
        android:textColor="#000000"
        android:layout_below="@+id/phrase1"
        android:layout_alignLeft="@+id/phrase1"
        android:layout_alignStart="@+id/phrase1"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/phrase3"
        android:textColor="#000000"
        android:layout_below="@+id/phrase2"
        android:layout_alignLeft="@+id/phrase2"
        android:layout_alignStart="@+id/phrase2"
        android:layout_marginTop="10dp"
        android:text="&quot;미안합니다&quot; - &quot;I am sorry&quot; (Mi-an-ham-ni-da)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/phrase4"
        android:textColor="#000000"
        android:text="Sed varius elementum sapien, sed pellentesque"
        android:layout_below="@+id/phrase3"
        android:layout_alignLeft="@+id/phrase3"
        android:layout_alignStart="@+id/phrase3"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/phrase5"
        android:textColor="#000000"
        android:text="Sed cursus ante vitae ligula eleifend"
        android:layout_below="@+id/phrase4"
        android:layout_alignLeft="@+id/phrase4"
        android:layout_alignStart="@+id/phrase4"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/phrase6"
        android:textColor="#000000"
        android:text="Integer nec magna dignissim, sodales nulla"
        android:layout_below="@+id/phrase5"
        android:layout_alignLeft="@+id/phrase5"
        android:layout_alignStart="@+id/phrase5"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/phrase7"
        android:textColor="#000000"
        android:text="Nulla eget aliquam lacus, non scelerisque"
        android:layout_below="@+id/phrase6"
        android:layout_alignLeft="@+id/phrase6"
        android:layout_alignStart="@+id/phrase6"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:text="Donec tempus, dolor a ullamcorper malesuada"
        android:layout_below="@+id/phrase7"
        android:layout_alignLeft="@+id/phrase7"
        android:layout_alignStart="@+id/phrase7"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:text="Ut justo ante, tempus non diam"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:text="Cras ac nibh et justo facilisis"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:text="Mauris efficitur gravida ex vel ullamcorper"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="10dp" />

</RelativeLayout>
